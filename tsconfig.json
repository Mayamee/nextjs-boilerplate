{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "isolatedModules": false,
    "paths": {
      "@example/shared": [
        "./shared"
      ],
      "public/*": [
        "./public/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
