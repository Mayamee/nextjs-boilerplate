{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@example/*": [
        "./src/*"
      ],
      "images/*": [
        "./public/images/*"
      ],
      "icons/*": [
        "./public/images/icons/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
